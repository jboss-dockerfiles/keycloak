{
  "name": "killbug-root",
  "private": true,
  "scripts": {
    "postinstall":"CMDS=`node -p -e 'Object.keys(require(\"./package.json\").scripts).filter(k => k.endsWith(\":build\")).map(x => \"npm run \" + x).join(\" && \")'` && echo $CMDS && $($CMDS)",
    "ci":"cd ci && npm run --",
    "api":"cd api && npm run",
    "certs":"cd certs && npm run",
    "dashboard":"cd dashboard && npm run",
    "dashboard:build":"cd dashboard && yarn",
    "database":"cd database && npm run",
    "database:build":"cd dashboard && yarn",
    "relay":"cd relay && npm run",
    "relay:build":"cd relay && yarn",
    "tag":"cd tag && npm run",
    "tag:build":"cd tag && yarn",
    "roi:spent":"HOUR_RATE=20 HOURS_PER_DAYS=3 DAYS=$(git summary | grep active | grep -oEi '[0-9]+') SPENT_EUROS=$(($DAYS*$HOURS_PER_DAYS*$HOUR_RATE)); echo \"${SPENT_EUROS}€ ($DAYS days, ${HOURS_PER_DAYS}h/days, ${HOUR_RATE}€/h)\""
  }
}
